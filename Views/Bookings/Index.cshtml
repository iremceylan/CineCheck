@model IEnumerable<CineCheck.Models.Booking>

@{
    ViewData["Title"] = "Your Bookings";
}

<h2>Your Bookings</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Movie</th>
            <th>Cinema</th>
            <th>Showtime</th>
            <th>Number of Tickets</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Movie?.Title</td>
                <td>@item.Cinema?.Name</td>
                <td>@item.Showtime?.StartTime.ToString("dd.MM.yyyy HH:mm")</td>
                <td>@item.NumberOfTickets</td>
            </tr>
        }
    </tbody>
</table>
