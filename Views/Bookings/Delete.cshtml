@model CineCheck.Models.Booking

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Booking</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Booking</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie!.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cinema)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cinema!.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Showtime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Showtime!.StartTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NumberOfTickets)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumberOfTickets)
