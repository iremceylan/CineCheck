@model CineCheck.Models.Booking

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Booking</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Booking Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Movie
        </dt>
        <dd class="col-sm-10">
            @Model.Movie?.Title ?? "N/A"
        </dd>
        <dt class="col-sm-2">
            Cinema
        </dt>
        <dd class="col-sm-10">
            @Model.Cinema?.Name ?? "N/A"
        </dd>
        <dt class="col-sm-2">
            Showtime
        </dt>
        <dd class="col-sm-10">
            @Model.Showtime?.StartTime.ToString("g") ?? "N/A"
        </dd>
        <dt class="col-sm-2">
            Number of Tickets
        </dt>
        <dd class="col-sm-10">
            @Model.NumberOfTickets
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
